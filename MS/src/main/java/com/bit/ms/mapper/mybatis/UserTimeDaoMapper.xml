<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bit.ms.dao.UserDaoInterface">
	
	<!-- 로그인한 유저의 충전 시간 업데이트(충전시간, 좌석번호, 유저 아이디) -->
	<update id="updateAddTime" parameterType="map">
		update userinfo set user_time=(user_time+#{param1}), seat_id=#{param2} 
		where user_id=#{param3}
	</update>
	
</mapper>